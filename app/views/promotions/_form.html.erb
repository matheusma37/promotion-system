<%= form_with model: @promotion do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>
  <div>
    <%= f.label :discount_rate %>
    <%= f.number_field :discount_rate %>
  </div>
  <div>
    <%= f.label :coupon_quantity %>
    <%= f.number_field :coupon_quantity, step: 1 %>
  </div>
  <div>
    <%= f.label :expiration_date %>
    <%= f.date_field :expiration_date %>
  </div>
  <div>
    <%= f.collection_check_boxes :product_category_ids, @product_categories, :id, :name %>
  </div>

  <%= f.submit %>
<% end %>